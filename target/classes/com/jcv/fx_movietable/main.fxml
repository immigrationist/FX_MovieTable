<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="600.0" prefWidth="800.0" spacing="20.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.jcv.fx_movietable.PrimaryController">
   <children>
      <Label text="Character Library">
         <font>
            <Font size="18.0" />
         </font></Label>
      <TableView fx:id="tblCharacters" editable="true">
        <columns>
          <TableColumn fx:id="clmName" onEditCommit="#titleChanged" prefWidth="120.0" text="Name" />
          <TableColumn fx:id="clmAge" onEditCommit="#ageChanged" prefWidth="136.0" text="Age" />
            <TableColumn fx:id="clmSubtype" onEditCommit="#subtypeChanged" prefWidth="127.0" text="Subtype" />
            <TableColumn fx:id="clmRebirth" onEditCommit="#rebirthChanged" prefWidth="75.0" text="Rebirth" />
        </columns>
      </TableView>
      <HBox spacing="10.0">
         <children>
            <TextField fx:id="txtName" prefHeight="26.0" prefWidth="135.0" promptText="Enter Character Name" />
            <ComboBox fx:id="cbxSubtype" prefHeight="26.0" prefWidth="194.0" promptText="Choose Character Subtype" />
            <TextField fx:id="txtAge" prefHeight="26.0" prefWidth="69.0" promptText="Enter Age">
               <HBox.margin>
                  <Insets />
               </HBox.margin></TextField>
            <DatePicker fx:id="datePicker" prefHeight="26.0" prefWidth="172.0" promptText="Character Rebirth">
               <HBox.margin>
                  <Insets />
               </HBox.margin></DatePicker>
         </children>
      </HBox>
      <HBox prefHeight="21.0" prefWidth="760.0">
         <children>
            <HBox prefHeight="9.0" prefWidth="760.0">
               <children>
                  <Button fx:id="bttnAddCharacter" mnemonicParsing="false" onAction="#addButtonPressed" text="Add Character" />
                  <Button fx:id="btnDelete" mnemonicParsing="false" onAction="#deleteButtonPressed" prefHeight="26.0" prefWidth="123.0" text="Delete Character">
                     <HBox.margin>
                        <Insets left="10.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="btnSecondary" mnemonicParsing="false" onAction="#sendDataToSecondary" prefHeight="26.0" prefWidth="156.0" text="Send Character Data">
                     <HBox.margin>
                        <Insets left="10.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
